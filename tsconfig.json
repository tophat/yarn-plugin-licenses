{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "lib": [
            "es2021"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        ".eslintrc.js",
        "babel.config.js",
        "commitlint.config.js",
        "jest.config.js",
        "tests"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.mock.ts",
        "src/**/__mocks__/**/*.ts"
    ]
}
